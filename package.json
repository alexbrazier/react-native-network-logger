{
  "name": "react-native-network-logger",
  "version": "1.17.0",
  "description": "An HTTP traffic monitor for React Native with zero dependencies",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "source": "src/index.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexbrazier/react-native-network-logger.git"
  },
  "keywords": [
    "react",
    "native",
    "react-native",
    "network",
    "interceptor",
    "http",
    "monitor",
    "logging",
    "ios",
    "android"
  ],
  "author": "alexbrazier",
  "license": "MIT",
  "files": [
    "lib",
    "src",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/*.spec.ts",
    "!**/*.spec.tsx",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "yarn eslint && yarn prettier",
    "eslint": "eslint \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier --check '{,example/}src/**/*.{js,json,ts,tsx}' '{*,example/*}.{js,ts,tsx}'",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn workspace react-native-network-logger-example",
    "bootstrap": "yarn"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@testing-library/react-native": "~13.1.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.5.3",
    "react": "~19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.10",
    "react-test-renderer": "^19.1.0",
    "release-it": "^19.0.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "globalSetup": "<rootDir>/global-jest-setup.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "homepage": "https://github.com/alexbrazier/react-native-network-logger.git",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
